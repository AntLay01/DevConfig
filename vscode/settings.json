{
    "svelte.enable-ts-plugin": true,
    "workbench.colorTheme": "Egoist One",

    "editor.fontSize": 10.5,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",
    "editor.fontVariations": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    // === workbench custom ===
    // "editor.formatOnSave": true, /* formatear al guardar */
    "workbench.iconTheme": "eq-material-theme-icons-light",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#662900",
        "tab.unfocusedActiveBackground": "#4b15005d",
        "editor.background": "#252222e7",
        "editor.inactiveSelectionBackground": "#ff977d1a",
        "editor.selectionBackground": "#915f4875"
    },
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "workbench.statusBar.visible": true,
    // emmet
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact"    
    },
    "emmet.triggerExpansionOnTab": true,
    "vscode-color-picker.languages": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "postcss",
        "xml",
        "html"
    ],
    // === egoist one === 
    "editor.tokenColorCustomizations": {
        "[Egoist One]": {
            "textMateRules": [
                {
                    "scope":"variable.other.object",
                    "settings": {
                        "foreground": "#ffae00"
                        // "foreground": "#dfdfdf",
                        // "foreground": "#c4c0c0",
                    }
                },
                {
                    "scope":"variable.other.property",
                    "settings": {
                        "foreground": "#dfdfdf",
                        // "foreground": "#ffae00",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope":"support.function",
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope":["support.class.builtin", "support.constant.math"],
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope":["string.template"],
                    "settings": {
                        "foreground": "#7ac041"
                    }
                },
                {
                    "scope":["keyword.operator.expression.import"],
                    "settings": {
                        "foreground": "#d562ec",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope":"variable.other.constant.ts",
                    "settings": {
                        "foreground": "#e7dede"
                    }
                },
                {
                    "scope":"meta.object-literal.key",
                    "settings": {
                        "foreground": "#c4c0c0"
                    }
                },
                {
                    "scope":["keyword.operator.increment","keyword.operator.relational","keyword.operator.spread.ts"],
                    "settings": {
                        "foreground": "#e100ff",
                        "fontStyle": "bold"
                    }
                }
            ]
        }
    },

    // === tailwind css ===
    "files.associations": {
        "*.css":"tailwindcss"
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "tailwindCSS.includeLanguages": {
        "plaintext": "html,astro,vue,jsx,tsx,svelte,js"
    },
    "terminal.integrated.cursorBlinking": true,
    "explorer.confirmDragAndDrop": false,
    "git.openRepositoryInParentFolders": "never",
    "css.completion.triggerPropertyValueCompletion": false,
    "explorer.confirmDelete": false,
    "typescript.updateImportsOnFileMove.enabled": "always"
}